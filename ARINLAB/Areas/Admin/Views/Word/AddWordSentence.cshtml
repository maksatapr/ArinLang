@{
    ViewData["Title"] = "Index";

}
@using ARINLAB.Models
@model SimpleWordModel

<h1>Add Sentence and Voice </h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-4 items-center">

            <label class="text-success" style="font-size:30px; font-weight:600">@Model.ArabWord</label>
        </div>
        <div class=" col-4">

            <h2 class="text-success" style="font-size:30px; font-weight:600">@Model.OtherWord</h2>
        </div>
        <div class="col-2"></div>
    </div>
    <hr />
    <div class="col-12 mb-30">
        <div class="box">
            <div class="box-head">
                <h3 class="title">@SharedLocalizer["Add Example Sentence"]</h3>
            </div>
            <div class="box-body">
                <div class="row mbn-20">

                    <!--Form Field-->
                    <div class="col-lg-6 col-12 mb-20">

                        <h6 class="mb-15">Arab</h6>

                        <div class="row mbn-15">
                            <div class="col-12 mb-15"><input type="text" class="form-control" placeholder="@SharedLocalizer["Sentence"]"></div>
                           
                            <div class="col-12 mb-15"><textarea class="form-control" placeholder="@SharedLocalizer["Transcript"]"></textarea></div>
                        </div>

                    </div>
                    <!--Form Field-->
                    <!--Readonly Field-->
                    <div class="col-lg-6 col-12 mb-20">

                        <h6 class="mb-15">@Model.DictID</h6>

                        <div class="row mbn-15">
                            <div class="col-12 mb-15"><input type="text" class="form-control" placeholder="@SharedLocalizer["Sentence"]"></div>
                          
                            <div class="col-12 mb-15"><textarea class="form-control" placeholder="@SharedLocalizer["Transcript"]"></textarea></div>
                        </div>  
                    </div>
                 
                </div>
            </div>
            <div class="box-foot items-end">
                <input type="button" class="btn btn-success" value="@SharedLocalizer["Add"]"></input>   
            </div>
        </div>
    </div>
</div>